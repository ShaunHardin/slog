<article id="lead">
  <h1>
    {{model.fullName}}
  </h1>
  <p>
    Name: {{model.fullName}}
  </p>
  <p>
    Email: {{model.email}}
  </p>
  <p>
    Phone: {{model.phone}}
  </p>
  <p>
    <label>
      Status:
    </label>
    {{view "select" content=model.statuses value=model.status}}
  </p>
  <p>
    <label>
      Notes:
    </label>
    <br/>
    {{view Ember.TextArea value=model.notes}}
  </p>
  <p>
    <input type='submit' value='Save Changes' {{action 'saveChanges'}}>
    {{#if showUnsavedMessage}}
      <div class="unsaved">unsaved changes</div>
    {{/if}}
    {{#if model.isSaving}}
      <div class="saving">saving...</div>
    {{/if}}
  </p>
</article>
